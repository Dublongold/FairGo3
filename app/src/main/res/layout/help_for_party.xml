<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help_background">

    <View
        android:id="@+id/helpWindow"
        android:layout_width="320dp"
        android:layout_height="274dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/help_window"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/spaceBetweenButtons"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/home_button"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/rounded_button_ripple"
        app:layout_constraintBottom_toBottomOf="@+id/helpWindow"
        app:layout_constraintEnd_toEndOf="@+id/helpWindow"
        app:layout_constraintStart_toStartOf="@+id/helpWindow"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>